<?xml version='1.0' encoding='utf-8'?>
<widget id="io.sasaki.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="Orientation" value="portrait" />
    <name>SASAKI APP</name>
    <description>
        シネマサンシャインアプリ
    </description>
    <author email="hataguchi@motionpicture.jp" href="https://motionpicture.jp/">
        motionpicture
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>


    <preference name="AutoHideSplashScreen" value="true" />
    <preference name="SplashScreenDelay" value="3000" />
    <platform name="android">
        <icon src="res/android/icon/ldpi.png" density="ldpi" /><!--36x36-->
        <icon src="res/android/icon/mdpi.png" density="mdpi" /><!--48x48-->
        <icon src="res/android/icon/hdpi.png" density="hdpi" /><!--72x72-->
        <icon src="res/android/icon/xhdpi.png" density="xhdpi" /><!--96x96-->
    </platform>
    <platform name="android">
        <splash src="res/android/splash/ldpi.png" density="ldpi" /><!--200x320-->
        <splash src="res/android/splash/mdpi.png" density="mdpi" /><!--320x480-->
        <splash src="res/android/splash/hdpi.png" density="hdpi" /><!--480x800-->
        <splash src="res/android/splash/xhdpi.png" density="xhdpi" /><!--720x1280-->
    </platform>

    <platform name="browser">
        <preference name="SplashScreen" value="res/browser/splashscreen.png" /> <!-- defaults to "/img/logo.png" -->
        <preference name="SplashScreenDelay" value="3000" /> <!-- defaults to "3000" -->
        <preference name="SplashScreenBackgroundColor" value="white" /> <!-- defaults to "#464646" -->
        <preference name="ShowSplashScreen" value="false" /> <!-- defaults to "true" -->
        <preference name="SplashScreenWidth" value="320" /> <!-- defaults to "170" -->
        <preference name="SplashScreenHeight" value="480" /> <!-- defaults to "200" -->
    </platform>

</widget>
